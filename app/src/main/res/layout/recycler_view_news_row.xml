<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/news_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_news_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_news_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_news_cover"
                android:paddingEnd="@dimen/news_padding"
                android:paddingLeft="@dimen/news_padding"
                android:paddingRight="@dimen/news_padding"
                android:paddingStart="@dimen/news_padding"
                android:paddingTop="@dimen/news_padding"
                android:textColor="#1e1c1d"
                android:textSize="28sp"
                tools:text="Name" />

            <TextView
                android:id="@+id/tv_news_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_news_name"
                android:paddingBottom="@dimen/news_padding"
                android:paddingEnd="@dimen/news_padding"
                android:paddingLeft="@dimen/news_padding"
                android:paddingRight="@dimen/news_padding"
                android:paddingStart="@dimen/news_padding"
                android:paddingTop="@dimen/news_padding"
                android:textColor="@color/colorSource"
                android:textSize="12sp"
                tools:text="Link" />

            <TextView
                android:id="@+id/tv_news_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_news_name"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/tv_news_link"
                android:layout_toRightOf="@id/tv_news_link"
                android:paddingBottom="@dimen/news_padding"
                android:paddingTop="@dimen/news_padding"
                android:textSize="12sp"
                tools:text="Date" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>